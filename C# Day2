using System;
using System.Diagnostics;

namespace Simple
{
    class MyClass
    {
        void PrintDateAndTime()
        {
            DateTime dt = DateTime.Now;
            Console.WriteLine($"{dt}");
        }
        public int GetHour()
        {
            DateTime dt = DateTime.Now;
            int hour = dt.Hour;

            return hour;
        }
        public void MethodWithLocalFunction()
        {
            int MyLocalFunction(int z1)
            {
                return z1 * 5;
            }
        int results = MyLocalFunction(5);
        Console.WriteLine($"Results of local function call:{results}");
        }
        static void Main()
        {
            MyClass mc = new MyClass();
            mc.PrintDateAndTime();
            Program.bess();
            mc.MethodWithLocalFunction();
        }
    }
     class Program
    {
        public static void bess()
        {
            MyClass mc = new MyClass();
            Console.WriteLine("Hour: {0}", mc.GetHour());
        }
    }
}
